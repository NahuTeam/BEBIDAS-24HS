<script>
  let cart = [];
  const WHATSAPP_NUMBER = "542915233816";

  function updatePrice(selectId, priceId) {
      const select = document.getElementById(selectId);
      const price = select.options[select.selectedIndex].getAttribute('data-price');
      document.getElementById(priceId).innerText = `$${price}`;
  }

  function addWithSelector(baseName, selectId) {
      const select = document.getElementById(selectId);
      const flavor = select.options[select.selectedIndex].value;
      const price = parseInt(select.options[select.selectedIndex].getAttribute('data-price'));
      
      cart.push({ name: `${baseName} (${flavor})`, price: price });
      updateUI();
      showToast();
  }

  function buyNow(baseName, selectId) {
      const select = document.getElementById(selectId);
      const flavor = select.options[select.selectedIndex].value;
      const price = select.options[select.selectedIndex].getAttribute('data-price');
      const msg = `Hola! Quiero comprar ya: *${baseName} (${flavor})* - Total: $${price}`;
      window.open(`https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(msg)}`, '_blank');
  }

  function updateUI() {
      document.getElementById('cart-count').innerText = cart.length;
      const list = document.getElementById('cart-items-list');
      let total = 0;
      
      if(cart.length === 0) {
          list.innerHTML = "<p style='color:#666; text-align:center;'>Vac√≠o</p>";
      } else {
          list.innerHTML = cart.map((item, i) => {
              total += item.price;
              return `<div class="cart-item">
                  <span>${item.name}</span>
                  <span>$${item.price} <button onclick="removeItem(${i})" style="background:none; border:none; color:red; cursor:pointer; margin-left:10px;">‚úï</button></span>
              </div>`;
          }).join('');
      }
      document.getElementById('cart-total-price').innerText = total;
  }

  function removeItem(i) {
      cart.splice(i, 1);
      updateUI();
  }

  function toggleCart() {
      const m = document.getElementById('cart-modal');
      m.style.display = (m.style.display === 'flex') ? 'none' : 'flex';
  }

  function checkout() {
      if(cart.length === 0) return alert("Carrito vac√≠o");
      let total = 0;
      let msg = "üî• *NUEVO PEDIDO* üî•\n\n";
      cart.forEach(item => {
          msg += `‚Ä¢ ${item.name} - $${item.price}\n`;
          total += item.price;
      });
      msg += `\nüí∞ *TOTAL: $${total}*`;
      window.open(`https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(msg)}`, '_blank');
  }

  function showToast() {
      const t = document.getElementById("toast");
      t.className = "show";
      setTimeout(() => t.className = "", 2000);
  }

  // Animaci√≥n fondo
  const emojis = ['üçæ','ü•É','üç∫','üç∏','üçπ'];
  setInterval(() => {
    const e = document.createElement('div');
    e.className = 'emoji';
    e.innerText = emojis[Math.floor(Math.random()*emojis.length)];
    e.style.left = Math.random()*100+'vw';
    document.getElementById('bg-animation').appendChild(e);
    setTimeout(() => e.remove(), 8000);
  }, 600);
</script>

